; train_eval_infer.config
; 2026/02/02 (C) antillia.com
;EDD2020 segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False
image_width    = 512
image_height   = 512
image_channels = 3
input_normalize =True
normalization  = False
num_classes    = 6
base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.05
dilation       = (3,3)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00007
clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/EDD2020/train/images/"
masks_dir     = "../../../dataset/EDD2020/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.5
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/EDD2020/valid/images/"
masks_dir  = "../../../dataset/EDD2020/valid/masks/"

[test] 
images_dir = "../../../dataset/EDD2020/test/images/"
masks_dir  = "../../../dataset/EDD2020/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"
;EDD2020 1+5
;{"BE":(0,255,255), "cancer":(255,0,0), "HGD":(10,128,10), "polyp":(200,0,200), "suspicious":(40,40,255)}
rgb_map = {(0,0,0):0,  (0,255,255):1, (255,0,0):2, (10,128,10):3, (200,0,200):4, (40,40,255):5}

